<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= 'home-nav' if params[:action] == 'home' %>">
  <%= link_to root_path do %>
    <%= image_tag asset_url('plant-icon.jpeg'), class: "navbar-brand", class: "avatar"%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Plants", plants_path, class: "nav-link"  %>
      </li>

      <li class="nav-item">
        <%= link_to "login", new_user_session_path, class: "nav-link"  %>
      </li>
      <li class="nav-item">
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: "nav-link"  %>
      </li>


      <li class="nav-item dropdown">
        <!-- <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://source.unsplash.com/collection/4389261/50x50" /> -->
        <div data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <% if current_user == nil%>
                <%= image_tag asset_url('user-icon.png'), height: 40, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
            <% elsif current_user.photo.attached? %>
              <%= image_tag current_user.photo, height: 40, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
            <% else %>
                <%= image_tag asset_url('user-icon.png'), height: 40, width: 40, class: "avatar dropdown-toggle", id: "navbarDropdown" %>
            <% end %>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Create a Plant", new_plant_path, class: "nav-link"  %>
          <%= link_to "Dashboard", dashboards_path, class: "nav-link"  %>
        </div>
      </li>
    </ul>
  </div>
</div>
